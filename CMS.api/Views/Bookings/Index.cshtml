@model IEnumerable<CMS.api.Models.Booking>

@{
    ViewBag.Title = "Booking Index";
}
<h3>All Bookings</h3>
<div class="row">
    <div class="col search-toolbox">
        @using (Html.BeginForm("Search", "Bookings", FormMethod.Post))
        {
            @Html.TextBox("SearchString") <input type="submit" name="submit" value="Search" />
        }
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Booking_ID)*@
            Booking ID
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Customer_Name)*@
            Customer Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Person.Person_Name)*@
            Agent Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Schedule.Ship_Name)*@
            Ship Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Item_Name)*@
            Item Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Item_Quantity)*@
            Item Quantity
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Schedule.Schedule_Departure_Date)*@
            Schedule Departure Date
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Schedule.Schedule_Arrival_Date)*@
            Schedule Arrival Date
        </th>
        <th>
            Status
        </th>
        <th>
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Booking_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Person_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule.Ship_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule.Schedule_Departure_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule.Schedule_Arrival_Date)
            </td>
            <td>
                Pending
            </td>
            @if (Session["PersonRole"].ToString() == "Agent")
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Booking_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Booking_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Booking_ID })
                </td>
            }
        </tr>
    }

</table>
